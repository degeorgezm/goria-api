<tr style="margin: 0;padding: 0;font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;box-sizing: border-box;font-size: 14px;">

    <% if (locals.align == "center") { %>
    <td class="content-block" style="margin: 0;padding: 0 0 20px;font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;box-sizing: border-box;font-size: 14px;vertical-align: top;text-align: center;">
    <% } else { %>
    <td class="content-block" style="margin: 0;padding: 0 0 20px;font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;box-sizing: border-box;font-size: 14px;vertical-align: top;">
    <% } %>

    <% if (locals.title) { %>
        <h3 style="margin: 20px 0 0;padding: 0;font-family: 'Helvetica Neue', Helvetica, Arial, 'Lucida Grande', sans-serif;box-sizing: border-box;font-size: 18px;color: #000;line-height: 1.2;font-weight: 400;">
                <%= title %>
        </h3>
    <% } %>