<%- include('_partials/_header.ejs'); %>

<%- include('_partials/_row_start.ejs'); %>
<%- include('_partials/_row_end.ejs'); %>

<% if (cardRemoved) { %>
    <%- include('_partials/_row_start.ejs'); %>
        Your <%= brand %> Card ending in <%= last4 %> was removed from Timeline.
    <%- include('_partials/_row_end.ejs'); %>
<% } else { %>  
    <%- include('_partials/_row_start.ejs'); %>
        Your Primary Card was removed from Timeline.
    <%- include('_partials/_row_end.ejs'); %>
<% } %>

<% if (paymentSourceMissing) { %>
    <%- include('_partials/_row_start.ejs'); %>
        <div class="alert alert-danger"  style="color: #721c24;background-color: #f8d7da;border-color: #f5c6cb;position: relative;padding: .75rem 1.25rem;margin-bottom: 1rem;border: 1px solid transparent;border-radius: .25rem;">
        You no longer have a Primary Card on file with us.  Please add a primary card before the start of your next billing cycle ( <%= billingCycleEnd %> ) to avoid future service interruptions.
        </div>
    <%- include('_partials/_row_end.ejs'); %>
<% }  %>  

<% if (primaryCardSwitch) { %>
<%- include('_partials/_row_start.ejs'); %>
    <div class="alert alert-info" style="color: #31708f;background-color: #d9edf7;border-color: #bce8f1;padding: 15px;margin-bottom: 20px;border: 1px solid transparent;border-radius: 4px;">
        A Backup Card is now your Primary Card.  Please verify your Primary Card is correct before the start of your next billing cycle ( <%= billingCycleEnd %> ) to avoid future service interruptions.
    </div>
<%- include('_partials/_row_end.ejs'); %>
<% } %>  

<%- include('_partials/_row_start.ejs'); %>
    Need extra help? Our support team has the answers you need to get up and running fast. Contact us by phone or email, or visit the Help Center.
<%- include('_partials/_row_end.ejs'); %>

<%- include('_partials/_row_start.ejs',{align:"center"}); %>
<a href="<%= app_base_url %>" class="btn-primary" style="margin: 0;padding: 0;font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;box-sizing: border-box;font-size: 14px;color: #FFF;text-decoration: none;background-color: #1ab394;border: solid #1ab394;border-width: 5px 10px;line-height: 2;font-weight: bold;text-align: center;cursor: pointer;display: inline-block;border-radius: 5px;text-transform: capitalize;">Visit Account</a>
<%- include('_partials/_row_end.ejs'); %>

<%- include('_partials/_row_start.ejs'); %>
    Thanks,<br> The Timeline Team
<%- include('_partials/_row_end.ejs'); %>

