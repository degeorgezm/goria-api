<%- include('_partials/_header.ejs'); %>

<% if (!updated) { %>
<%- include('_partials/_row_start.ejs',{title:  "You've added a Coupon to your Timeline " + subscription_name + " Subscription"}); %>
<%- include('_partials/_row_end.ejs'); %>
<% } %>

<% if (updated) { %>
<%- include('_partials/_row_start.ejs',{title:  "You've substituted a Coupon on your Timeline " + subscription_name + " Subscription"}); %>
<%- include('_partials/_row_end.ejs'); %>
<% } %>

<%- include('_partials/_row_start.ejs'); %>
    <div class="alert alert-info" style="color: #31708f;background-color: #d9edf7;border-color: #bce8f1;padding: 15px;margin-bottom: 20px;border: 1px solid transparent;border-radius: 4px;">
        <strong>Coupon Code:</strong> <%= coupon_code %><br>

        <% if (amount_off) { %>
        <strong>Discount:</strong> $<%= amount_off %> per month<br>
        <% } %>

        <% if (percent_off) { %>
        <strong>Discount:</strong> <%= percent_off %>% per month<br>
        <% } %>

        <strong>Start:</strong> <%= coupon_start %><br>

        <% if (duration == 'repeating') { %>
        <strong>Duration:</strong> <%= duration_in_months %> months<br>
        <strong>End:</strong> <%= coupon_end %><br>
        <% } %>

        <% if (duration == 'forever') { %>
        <strong>Duration:</strong> Indefinite<br>
        <% } %>

    </div>
<%- include('_partials/_row_end.ejs'); %>

<%- include('_partials/_row_start.ejs'); %>
